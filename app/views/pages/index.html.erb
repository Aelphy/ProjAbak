<h1>Pages_Tree</h1>
 
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Title</th>
    <th>Text</th>
    <th>Path</th>
    <th>Parent_id</th>
    <th>Left Key</th>
    <th>Right Key</th>
  </tr>
 
  <% @page.each do |page| %>
    <tr>
      <td><%= page.id %></td>
      <td><%= page.name %></td>
      <td><%= page.title %></td>
      <td><%= page.text %></td>
      <td><%= page.path %></td>
      <td><%= page.parent_id %></td>
      <td><%= page.lft %></td>
      <td><%= page.rgt %></td>
    </tr>
  <% end %>
</table>
